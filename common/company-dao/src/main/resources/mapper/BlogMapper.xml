<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.BlogMapper">
    <select id="selectBlog" resultType="com.dao.Blog">
        select * from t1 where id = #{id}
    </select>
    <update id="updateBlog" parameterType="com.dao.Blog">
        update t1 set
         name = #{name}
        where id = 2
    </update>
    <insert id="insertBlog" parameterType="com.dao.Blog">
        insert into campany (id, name)
        values (#{id}, #{name})
    </insert>
    <insert id="insertDepartment" parameterType="com.dao.Department">
        insert into department (id,name,camid,empid,depid)
        values (#{id}, #{name} ,#{camid},#{empid},#{depid})
    </insert>
    <insert id="insertEmployee" parameterType="com.dao.Employee">
        insert into employee (id,name,depid,empid)
        values (#{id}, #{name} ,#{depid},#{empid})
    </insert>
</mapper>